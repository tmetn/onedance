extends /template/base/base
include /organism/cart/cart

block maincontent
  main.mt-5.pt-4
    div.container
      //+debug(decoratedCart.cart)
      h2.my-5.h2.text-center Checkout - Thank you
      div.row
        div.col-md-8.mb-4
          h4.d-flex.justify-content-between.align-items-center.mb-3
            span.text-muted Your order has been received
          div.card
            .card-body

              p We will send an email to #{email}

              each placedOrder in placedOrderInfos
                p Order number #{placedOrder.orderNumber}